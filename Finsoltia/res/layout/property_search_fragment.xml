<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/imageview_random_property"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/im_1"
        android:gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textview_random_property_type"
                style="@style/textShadowStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Apartment / flat, "
                android:textSize="@dimen/subHeading" />

            <TextView
                android:id="@+id/textview_random_property_bedrooms"
                style="@style/textShadowStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="2 Bedrooms"
                android:textSize="@dimen/subHeading" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview_random_property_cost"
            style="@style/textShadowStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="39,000.00 $"
            android:textSize="@dimen/heading" />

        <TextView
            android:id="@+id/textview_random_property_location"
            style="@style/textShadowStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="6 km, Berga , Barcelona"
            android:textSize="@dimen/subHeading" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="250dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_looking_for"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/rightarrow"
                android:gravity="left|center_vertical"
                android:text="Looking for ..." />

            <Button
                android:id="@+id/button_where"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/rightarrow"
                android:gravity="left|center_vertical"
                android:text="Where" />

            <Button
                android:id="@+id/button_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/rightarrow"
                android:gravity="left|center_vertical"
                android:text="District" />

            <Button
                android:id="@+id/button_county"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/rightarrow"
                android:gravity="left|center_vertical"
                android:text="County?" />

            <Button
                android:id="@+id/button_parish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/rightarrow"
                android:gravity="left|center_vertical"
                android:text="Parish?" />

            <Button
                android:id="@+id/button_more_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableRight="@drawable/rightarrow"
                android:gravity="left|center_vertical"
                android:text="More options" />

            <TextView
                android:id="@+id/textview_bedrooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Bedrooms"
                android:textSize="@dimen/subHeading"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_bedrooms_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableRight="@drawable/rightarrow"
                android:gravity="left|center_vertical"
                android:text="From" />

            <Button
                android:id="@+id/button_Bedrooms_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/rightarrow"
                android:gravity="left|center_vertical"
                android:text="To" />

            <TextView
                android:id="@+id/textview_price_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Price range"
                android:textSize="@dimen/subHeading"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_price_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableRight="@drawable/rightarrow"
                android:gravity="left|center_vertical"
                android:text="Min" />

            <Button
                android:id="@+id/button_price_max"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/rightarrow"
                android:gravity="left|center_vertical"
                android:text="Max" />

            <Button
                android:id="@+id/button_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableRight="@drawable/search"
                android:gravity="right|center_vertical"
                android:text="Searchs" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>