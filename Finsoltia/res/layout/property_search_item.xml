<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10" >

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="3" >

        <ImageView
            android:id="@+id/imageview_property_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/im_1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/thumb_mask_selected" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textview_property_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apartment / Flat, "
                android:textSize="@dimen/heading" />

            <TextView
                android:id="@+id/textview_property_bedrooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Bedrooms"
                android:textSize="@dimen/heading" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textview_property_county"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Madrid, "
                android:textColor="@color/gray_battleship"
                android:textSize="@dimen/subHeading" />

            <TextView
                android:id="@+id/textview_property_parish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Madrid"
                android:textColor="@color/gray_battleship"
                android:textSize="@dimen/subHeading" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview_property_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20.000,00 $"
            android:textColor="@color/gray_battleship"
            android:textSize="@dimen/subHeading" />

        <ImageView
            android:id="@+id/imageview_property_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageview_property_favourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/favourite_placeholder" />

</LinearLayout>